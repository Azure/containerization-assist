{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "ES2022",
    "target": "ES2022",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "containerization-assist-mcp": [
        "../../src/index.ts"
      ],
      "containerization-assist-mcp/*": [
        "../../src/*"
      ],
      "containerization-assist-mcp/server": [
        "../../src/mcp/server.ts"
      ],
      "containerization-assist-mcp/types": [
        "../../src/types/index.ts"
      ],
      "containerization-assist-mcp/config": [
        "../../src/config/index.ts"
      ],
      "containerization-assist-mcp/lib": [
        "../../src/lib/index.ts"
      ],
      "containerization-assist-mcp/tools/*": [
        "../../src/tools/*/index.ts"
      ]
    },
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": [
    "./*.ts",
    "./*.js"
  ],
  "exclude": [
    "../../src",
    "../../node_modules"
  ]
}