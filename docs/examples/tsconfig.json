{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "ES2022",
    "target": "ES2022",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "containerization-assist-mcp": [
        "../../src/index.ts"
      ],
      "containerization-assist-mcp/*": [
        "../../src/*"
      ],
      "containerization-assist-mcp/server": [
        "../../src/mcp/server.ts"
      ],
      "containerization-assist-mcp/types": [
        "../../src/types/index.ts"
      ],
      "containerization-assist-mcp/config": [
        "../../src/config/index.ts"
      ],
      "containerization-assist-mcp/lib": [
        "../../src/lib/index.ts"
      ],
      "containerization-assist-mcp/tools/*": [
        "../../src/tools/*/index.ts"
      ],
      "@/*": [
        "../../src/*"
      ],
      "@types": [
        "../../src/types/index.ts"
      ],
      "@/config/*": [
        "../../src/config/*"
      ],
      "@/infra/*": [
        "../../src/infra/*"
      ],
      "@/lib/*": [
        "../../src/lib/*"
      ],
      "@/mcp/*": [
        "../../src/mcp/*"
      ],
      "@/tools/*": [
        "../../src/tools/*"
      ],
      "@/knowledge/*": [
        "../../src/knowledge/*"
      ],
      "@/validation/*": [
        "../../src/validation/*"
      ],
      "@/app/*": [
        "../../src/app/*"
      ],
      "@/app": [
        "../../src/app/index.ts"
      ],
      "@/types/*": [
        "../../src/types/*"
      ]
    },
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": [
    "./*.ts",
    "./*.js"
  ],
  "exclude": [
    "../../src",
    "../../node_modules"
  ]
}