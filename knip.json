{
    "$schema": "https://unpkg.com/knip@5/schema.json",
    "entry": [
        "src/index.ts",
        "src/exports/tools.ts",
        "src/mcp/mcp-server.ts",
        "src/cli/cli.ts",
        "test/**/*.test.ts",
        "scripts/**/*.ts"
    ],
    "project": [
        "src/**/*.ts"
    ],
    "ignore": [
        "**/*.test.ts",
        "**/*.spec.ts",
        "scripts/**/*.js"
    ],
    "ignoreExportsUsedInFile": {
        "interface": true,
        "type": true
    },
    "ignoreDependencies": [
        "tsc-alias",
        "@kubernetes-models/apimachinery",
        "dockerfilelint",
        "kubernetes-models",
        "@types/ajv"
    ],
    "includeEntryExports": true
}