{
  "name": "@thgamble/containerization-assist-mcp",
  "version": "1.1.7",
  "description": "Containerization Assist MCP Server - AI-powered containerization workflow tools for the Model Context Protocol",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "container",
    "containerization",
    "docker",
    "kubernetes",
    "ai",
    "llm",
    "devops",
    "azure"
  ],
  "homepage": "https://github.com/Azure/containerization-assist#readme",
  "bugs": {
    "url": "https://github.com/Azure/containerization-assist/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Azure/containerization-assist.git",
    "directory": "npm"
  },
  "license": "MIT",
  "author": "Microsoft Azure",
  "type": "module",
  "main": "lib/index.js",
  "types": "index.d.ts",
  "bin": {
    "containerization-assist-mcp": "./bin/containerization-assist-mcp",
    "ckmcp": "./bin/containerization-assist-mcp"
  },
  "files": [
    "bin/",
    "lib/",
    "scripts/",
    "index.js",
    "index.d.ts",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "postinstall": "node scripts/postinstall.js",
    "build": "bash scripts/build.sh",
    "test": "node scripts/test.js",
    "publish:packages": "bash scripts/publish.sh",
    "prepublishOnly": "echo 'Use npm run publish:packages to publish all packages'",
    "version": "node scripts/sync-versions.js && echo 'Version updated to' $npm_package_version && git add package.json"
  },
  "dependencies": {
    "zod": "^3.23.8"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "optionalDependencies": {
    "@thgamble/containerization-assist-mcp-darwin-x64": "1.1.7",
    "@thgamble/containerization-assist-mcp-darwin-arm64": "1.1.7",
    "@thgamble/containerization-assist-mcp-linux-x64": "1.1.7",
    "@thgamble/containerization-assist-mcp-linux-arm64": "1.1.7",
    "@thgamble/containerization-assist-mcp-win32-x64": "1.1.7",
    "@thgamble/containerization-assist-mcp-win32-arm64": "1.1.7"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "cpu": [
    "x64",
    "arm64"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "mcp": {
    "version": "1.0.0",
    "protocol": "stdio",
    "capabilities": {
      "tools": true,
      "resources": true,
      "prompts": true
    }
  }
}
