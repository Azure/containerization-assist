  "bin": {
    "containerization-assist-mcp": "./dist/src/cli/cli.js",
    "ca-mcp": "./dist/src/cli/cli.js"
  },
  "files": [
    "dist/**/*",
    "dist-cjs/**/*",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "clean": "rm -rf dist dist-cjs coverage .tsbuildinfo*",
    "build": "tsx scripts/smart-build.ts --parallel --skip-tests",
    "build:watch": "tsx scripts/smart-build.ts --parallel --watch",
    "dev": "tsx watch src/cli/cli.ts",
    "start": "node dist/src/cli/cli.js",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:unit": "NODE_OPTIONS='--experimental-vm-modules' jest --selectProjects unit",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write 'src/**/*.ts'",
    "typecheck": "tsc --noEmit",
    "validate": "npm run lint && npm run typecheck && npm run test:unit",
    "validate:pr": "npm run validate",
    "fix": "npm run lint:fix && prettier --write 'src/**/*.ts'",
    "quality:gates": "./scripts/quality-gates.sh",
    "prepack": "node scripts/prepare-cjs-package.cjs",
    "postpack": "node scripts/restore-package.cjs",
    "prepublishOnly": "npm run validate && npm run build",
    "prepare": "husky install",
    "mcp:inspect": "npx @modelcontextprotocol/inspector ./scripts/mcp-start.sh start"
  },
  "dependencies": {
    "@kubernetes/client-node": "^1.0.0",
    "@modelcontextprotocol/sdk": "^1.5.0",
    "commander": "^11.1.0",
    "docker-file-parser": "^1.0.7",
    "dockerfile-ast": "^0.7.1",
    "dockerode": "^2.1.0",
    "js-yaml": "^4.1.0",
    "pino": "^9.9.0",
    "validate-dockerfile": "^1.8.1",
    "yaml": "^2.8.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@jest/globals": "^29.7.0",
    "@types/dockerode": "^3.3.23",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.19.13",
    "@types/tar-fs": "^2.0.4",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "eslint": "^9.35.0",
    "husky": "^8.0.3",
    "jest": "^30.1.3",
    "lint-staged": "^13.1.3",
    "prettier": "^3.1.0",
    "ts-jest": "^29.2.5",
    "tsc-alias": "^1.8.10",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.14.0"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix --max-warnings 750",
      "prettier --write"
    ]
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "containerization",
    "docker",
    "kubernetes",
    "ai-assisted",
    "devops",
    "java",
    "spring-boot",
    "maven",
    "gradle"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/azure/containerization-assist"
