# Container Kit MCP Server Environment Variables
# Copy this file to .env and adjust values as needed

# Server settings
MCP_WORKSPACE_DIR=/tmp/mcp-workspace
MCP_STORE_PATH=/tmp/mcp-store/sessions.db
MCP_SESSION_TTL=24h
MCP_MAX_SESSIONS=100
MCP_MAX_DISK_PER_SESSION=104857600
MCP_TOTAL_DISK_LIMIT=1073741824

# Transport settings
MCP_TRANSPORT=stdio
MCP_HTTP_ADDR=0.0.0.0
MCP_HTTP_PORT=8080
MCP_CORS_ORIGINS=*

# Logging
MCP_LOG_LEVEL=info

# Prompt templates
MCP_PROMPT_TEMPLATE_DIR=
MCP_PROMPT_HOT_RELOAD=false
MCP_PROMPT_ALLOW_OVERRIDE=false

# AI sampling
MCP_SAMPLING_ENDPOINT=
MCP_SAMPLING_API_KEY=
MCP_SAMPLING_MAX_TOKENS=4096
MCP_SAMPLING_TEMPERATURE=0.7